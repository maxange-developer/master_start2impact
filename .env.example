# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false
PROJECT_NAME=Tenerife AI Activity Finder

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///./sql_app.db
# For PostgreSQL (production):
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost/tenerife_ai_db

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API
# Developer will provide the actual key
OPENAI_API_KEY= #la chiave la trovi nel file docker-compose.yml
OPENAI_MODEL=gpt-4-turbo

# Tavily Search API
# Developer will provide the actual key
TAVILY_API_KEY= #la chiave la trovi nel file docker-compose.yml

# CORS Settings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost"]

# Frontend Base URL (for redirects)
FRONTEND_URL=http://localhost:5173

# API Version
API_V1_STR=/api/v1
