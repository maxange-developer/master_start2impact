# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# JSON/YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf
docker-compose.yml text eol=lf
docker-compose.yaml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Configuration
*.conf text eol=lf
*.config text eol=lf
.env.example text eol=lf

# SQL
*.sql text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.db binary
*.sqlite binary
